<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/rlContainer"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.app.FragmentTabHost
        android:visibility="gone"
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/rgTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rlHome"
            android:textSize="@dimen/txt_m"
            android:textColor="@drawable/bg_home_text_selector"
            android:checked="true"
            android:drawablePadding="@dimen/space_s"
            android:gravity="center"
            android:drawableTop="@drawable/bg_ic_launcher"
            android:text="@string/lbl_home"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
                android:id="@+id/rlMessage"
            android:textSize="@dimen/txt_m"
            android:textColor="@drawable/bg_home_text_selector"
            android:drawablePadding="@dimen/space_s"
            android:gravity="center"
            android:drawableTop="@drawable/bg_ic_launcher"
            android:text="@string/lbl_message"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rlProfile"
            android:textSize="@dimen/txt_m"
            android:textColor="@drawable/bg_home_text_selector"
            android:drawablePadding="@dimen/space_s"
            android:gravity="center"
            android:drawableTop="@drawable/bg_ic_launcher"
            android:text="@string/lbl_profile"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RadioGroup>



</LinearLayout>